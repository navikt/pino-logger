{
    "name": "pino-logger-root",
    "private": true,
    "license": "MIT",
    "packageManager": "yarn@4.12.0",
    "workspaces": [
        "libs/pino-logger",
        "libs/next-logger"
    ],
    "engines": {
        "node": "24"
    },
    "scripts": {
        "build": "yarn workspaces foreach -At run build",
        "test": "yarn workspaces foreach -A run test",
        "clean": "yarn workspaces foreach -A run clean",
        "next:patch": "yarn workspaces foreach -A --no-private version patch -i",
        "next:minor": "yarn workspaces foreach -A --no-private version minor -i"
    },
    "devDependencies": {
        "@navikt/eslint-config-teamsykmelding": "^7.2.0",
        "prettier": "^3.7.4",
        "rimraf": "^6.1.2"
    },
    "eslintConfig": {
        "extends": [
            "@navikt/eslint-config-teamsykmelding"
        ]
    },
    "prettier": "@navikt/eslint-config-teamsykmelding/prettier"
}
